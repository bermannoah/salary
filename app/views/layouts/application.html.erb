<!DOCTYPE html>
<html>
<head>
  <title>Salary</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |type, msg| %>
    <%= content_tag :div, msg, class: "flash_#{type}" %>
  <% end %>

  <div>
    <% if @current_user %>
      <%= link_to "Logout", logout_path, method: :delete %>
    <% else %>
      <%= link_to "Login", login_path %>
    <% end %>
  </div>

<%= yield %>
</body>
</html>
